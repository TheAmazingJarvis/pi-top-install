# Define apt.pi-top.com as a source for apt-get
sudo cp pi-top.list /etc/apt/sources.list.d

# get the required public key
wget http://apt.pi-top.com/apt.pi-top.com.gpg.key
sudo apt-key add apt.pi-top.com.gpg.key

# Make sure that apt-get is aware of the lastest changes and additions
sudo apt-get update

# Download and install these changes
sudo apt-get upgrade

# Install pi-top packages
sudo apt-get install pt-battery pt-hub-controller

# Install newest version of xscreensaver, required for pt-hub-controller
sudo apt-get install xscreensaver

# Remove packages which are not needed anymore
sudo apt-get autoremove

# Reboot system
echo 'Please reboot your Raspberry Pi'
